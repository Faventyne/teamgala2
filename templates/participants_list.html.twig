{% extends "layout.html.twig" %}

{% block title %}
Select participants
{% endblock %}


{% block pagename %}
Select participants
{% endblock %}
{% block username %}
    {{ currentuser.firstname }} {{ currentuser.lastname }}
{% endblock %}

{% block content %}
  <section class="col s10">
      {#{{ form_start(form,{'attr': {'class': 'foo'}}) }}#}
    <input type="text" name="fakesearchbar" placeholder="FAKE SEARCH BAR">
    <input type="hidden" name="update" placeholder="{{ update }}">
    {% for participant in participants %}
      <ul class="collection">
        <li class="collection-item">
            {{ participant['firstname']  }}
            {{ participant['lastname'] | upper }}
            <br>
            <br>
              {{participant['position']}}
            <span class="secondary-content" >
              <button class="waves-effect waves-light btn action-button
                {%for id in activeId %}
                            {% if participant.id == id %}
                                 red inactive
                            {% endif %}
                        {% endfor %}
              " data-participant-id={{ participant['id'] }}>ADD
              {%for id in activeId %}
                    {% if participant.id == id %}
                       ED
                    {% endif %}
              {% endfor %}
              </button>
              <!-- le if sera pour ajoute ou non  -->

            </span>
        </li>
      </ul>
    {% endfor %}
    <ul class="collection">
      <li class="collection-item"></li>
      <br><br> <!-- empt ul to make space for fixed add button -->
    </ul>
<div class="fixed-action-btn">

    {#{{ form_row(form.submit,{'attr': {'class': 'waves-effect waves-light btn-large'}}) }}#}

        <button type="submit" class="waves-effect waves-light btn-large">CREATE ACTIVITY</button>


</div>
{#{{ form_end(form) }}#}
</section>

{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/participants.js') }}"></script>
{% endblock %}
