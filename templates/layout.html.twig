          close
        </div>
      </div>

      <header>
        <a href="{{ path('home') }}"><i id="returnMenu" class="material-icons">home</i></a>
          <a href="{{ path('home') }}"><img id="logoHomepage" src="{{ asset('lib/img/logo.png') }}" </a><h3>Serpico</h3>
        <!--<a href="#"><i id="returnPage" class="material-icons">chevron_left</i></a>-->
        <a href="#"><i id="logOutButton" class="material-icons">person</i></a>
          <h4> {{ currentuser.firstname }} {{ currentuser.lastname }} </h4>

        <div class="currentPage">
          {% block pagename %}{% endblock %}
        </div>
          <h5>{{ currentuser.firstname }} {{ currentuser.lastname }}</h5>
      </header>



        {% block content %}{% endblock %}

